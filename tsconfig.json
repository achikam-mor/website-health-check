{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": ".",
    "rootDir": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "allowJs": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*", "monitor.spec.ts"],
  "exclude": ["node_modules"]
}
